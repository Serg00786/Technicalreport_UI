@model TechnicalReport_Data.Models.FE.ProcessDowntimes

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 align="center">Удаление записи о Технологическом останове</h4>

<h6>Вы уверены что хотите удалить запись?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Оборудование</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Machine)
        </dd>
        <dt class = "col-sm-2">
            <label>Причина останова</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <label>Дата начала</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.from_dt)
        </dd>
        <dt class = "col-sm-2">
            <label>Дата окончания</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.to_dt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
